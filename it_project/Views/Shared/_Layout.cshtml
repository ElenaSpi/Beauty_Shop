<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Beauty Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

<style>
     #brand {
            font-weight:bold;
            color:white;
        }
    .i-extra {
        width:  100px;
        height: 100px;
        padding: 15px;
        background-color: white;
        color: rgb(51, 122, 183);
    }

        .space {
            padding-top:5px;
        }
        .space-n {
            padding-top:10px;
        }
        .space-m {
            padding-top:4px;
        }
        .navbar {
            background-color: rgb(91,59,140);
        }

        #modified {
            background-color: rgb(1,121,111);
            border-color: rgb(1,121,111);
        }

        .text-new {
            color:white !important;
        }
        .text-new:hover {
            color: ghostwhite !important;
        } 

